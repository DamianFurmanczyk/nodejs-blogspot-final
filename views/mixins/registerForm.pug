mixin regForm(user = {})
  .row
    form(action='/register' method='POST').col.s12.m10.xl6.offset-m1.offset-xl3.l8.offset-l2
      .row
        .input-field.col.s12
          input#email.validate(type='email', value=user && user.email, name='email', required)
          label(for='email') Email
      .row
        .input-field.col.s12
          input#username.validate(name='username', value=user && user.username, type='text')
          label(for='username') username
      .row
        .input-field.col.s12
          input#password.validate(name='password', type='password')
          label(for='password') Password
      .row
        .input-field.col.s12
          input#confirmPassword.validate(type='password', name='confirmPassword')
          label(for='confirmPassword') Confirm password
      .row
        .col12
          p
            input#r1(name='ispublic', value='true', checked= user ? user.ispublic=='true' : false,  type='radio', required)
            label(for='r1') Public
          p
            input#r2(name='ispublic', value='false', checked= user ? user.ispublic=='false' : false, type='radio')
            label(for='r2') Private
      .row
        input(type='submit', value='Sign up').btn.right